@model DotnetCore.Models.ViewModels.Reserve_Vm
@{
    ViewData["Title"] = "Index";
}
<div class="mx-5 my-5 text-center">
    @if (ViewBag.Msg != null)
    {
        <p class="mx-5 alert bg-danger text-light">@ViewBag.Msg</p>
    }
</div>
<form method="post" enctype="multipart/form-data" asp-controller="Reserve" asp-action="Index">
    <div class="row">

        <div class="col-6 my-2">
            <label for="Name">Name :</label>
            <input type="text" class="form-control" placeholder="Name" aria-label="Name" asp-for="Name">
        </div>

        <div class="col-6 my-2">
            <label for="Family">Family :</label>
            <input type="text" class="form-control" placeholder="Family" aria-label="Family" asp-for="Family">
        </div>

        <div class="col-6 my-2">
            <label for="PhoneNumber">PhoneNumber :</label>
            <input type="number" class="form-control" placeholder="PhoneNumber" aria-label="PhoneNumber"
                asp-for="PhoneNumber">
        </div>

        <div class="col-6 my-2">
            <label for="Email">Email :</label>
            <input type="email" class="form-control" placeholder="Email" aria-label="Email" asp-for="Email">
        </div>

        <div class="col-6 my-2">
            <label for="Age">Age :</label>
            <input type="text" class="form-control" placeholder="Age" aria-label="Age" asp-for="Age">
        </div>

        @* <div class="col-6 my-2">
        <label for="RoomNumber">RoomNumber :</label>
        <input type="text" class="form-control" placeholder="RoomNumber" aria-label="RoomNumber">
        </div> *@

        @* <div class="col-6 my-2">
            <label for="ReserveDateTime">ReserveDateTime :</label>
            <input type="datetime-local" class="form-control" placeholder="ReserveDateTime" aria-label="ReserveDateTime"
                asp-for="ReserveDateTime"> 
        </div>*@

        <div class="col-6 my-2">
            <label for="StartDateTime">StartDateTime :</label>
            <input type="datetime-local" class="form-control" placeholder="StartDateTime" aria-label="StartDateTime"
                asp-for="StartDateTime">
        </div>

        <div class="col-6 my-2">
            <label for="EndDateTime">EndDateTime :</label>
            <input type="datetime-local" class="form-control" placeholder="EndDateTime" aria-label="EndDateTime"
                asp-for="EndDateTime">
        </div>

        <div class="col-6 my-2">
            <label for="Image">Image :</label>
            <input type="file" class="form-control" placeholder="Image" aria-label="Image" asp-for="fileImage">
        </div>

    </div>
    <div class="row justify-content-center">

        <button type="submit" class="btn btn-success btn-lg">submit</button>

    </div>
</form>